<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView xmlns:android="http://schemas.android.com/apk/res/android"
                        android:id="@+id/cafeImage"
                        android:scaleType="fitXY"
                        android:layout_marginTop="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="170dp"
                        android:layout_gravity="center" />

                    <TextView
                        android:text="NAME             "
                        android:id="@+id/cafeName"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="2dp"
                        android:fontFamily="@font/cafe_dangdang"
                        android:gravity="center"
                        android:textColor="@android:color/black"
                        android:textSize="15sp" />

                    <TextView
                        android:text="LOCATION        "
                        android:id="@+id/cafeLocation"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginVertical="2dp"
                        android:fontFamily="@font/cafe_dangdang"
                        android:gravity="center"
                        android:textColor="@android:color/black"
                        android:textSize="15sp" />

                    <TextView
                        android:text="OPEN/CLOSE    "
                        android:id="@+id/hours"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="2dp"
                        android:fontFamily="@font/cafe_dangdang"
                        android:gravity="center"
                        android:textColor="@android:color/black"
                        android:textSize="15sp" />

                    <TextView
                        android:text="CONTECT         "
                        android:id="@+id/phone"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginVertical="2dp"
                        android:fontFamily="@font/cafe_dangdang"
                        android:gravity="center"
                        android:textColor="@android:color/black"
                        android:textSize="15sp" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/cafeScore"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_marginVertical="2dp"
                            android:layout_marginLeft="20dp"
                            android:fontFamily="@font/cafe_dangdang"
                            android:gravity="center"
                            android:textColor="@android:color/black"
                            android:textSize="15sp" />

                        <RatingBar
                            android:id="@+id/scoreBar"
                            style="@style/Widget.AppCompat.RatingBar.Small"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginVertical="2dp"
                            android:background="@drawable/rating_bar"
                            android:numStars="5"
                            android:foregroundTint="@android:color/holo_green_light"
                            android:stepSize="1" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@android:color/black" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="15dp"
                android:textColor="@android:color/black"
                android:fontFamily="@font/cafe_dangdang"
                android:text="MENU"
                android:textSize="30sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:layout_weight="2"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/beverage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginRight="5dp"
                    android:background="@color/payButton"
                    android:fontFamily="@font/cafe_dangdang"
                    android:text="BEVERAGE"
                    android:textColor="@android:color/white" />

                <Button
                    android:id="@+id/bread"
                    android:layout_marginLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/payButton"
                    android:fontFamily="@font/cafe_dangdang"
                    android:text="DESSERT"
                    android:textColor="@android:color/white" />

            </LinearLayout>
            <TextView
                android:id="@+id/notDessert"
                android:textColor="@android:color/black"
                android:text="디저트가 존재하지 않음"
                android:fontFamily="@font/cafe_dangdang"
                android:gravity="center"
                android:layout_marginVertical="15dp"
                android:textSize="24sp"
                android:layout_width="match_parent"
                android:visibility="gone"
                android:layout_height="wrap_content"/>

            <RadioGroup
                android:id="@+id/degree"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_weight="2"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="visible">

                <RadioButton
                    android:id="@+id/ice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:checked="true"
                    android:fontFamily="@font/cafe_dangdang"
                    android:gravity="center"
                    android:text="ICE" />

                <RadioButton
                    android:id="@+id/hot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/cafe_dangdang"
                    android:gravity="center"
                    android:text="HOT" />
            </RadioGroup>

            <FrameLayout
                android:id="@+id/choose"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>