<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/select_title"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:fontFamily="@font/cafe_dangdang"
            android:gravity="center"
            android:background="#FFFFFF"
            android:text="마이 페이지"
            android:textSize="20sp"
            android:textStyle="italic" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/mypage_division"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/my_toolbar"
        android:background="@color/cardview_shadow_start_color"
        android:orientation="horizontal"></LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="200dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:background="#FFFFFF"
            app:srcCompat="@drawable/user512" />

        <TextView
            android:id="@+id/user_text"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:background="#FFFFFF"
            android:fontFamily="@font/cafe_dangdang"
            android:gravity="center"
            android:text="홍길동님 반갑습니다."

            android:textSize="28dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <Button
            android:id="@+id/move_point2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/round_button"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/cafe_dangdang"
            android:text="보유포인트 :"

            android:textSize="20sp" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/point2_division"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/my_toolbar"
        android:orientation="horizontal"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/move_orderlist"
            android:layout_width="340dp"
            android:layout_height="110dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/round_buttonleft"
            android:drawableTop="@drawable/list64"
            android:drawablePadding="0dp"
            android:fontFamily="@font/cafe_dangdang"
            android:text="주문내역"
            android:textAlignment="center"
            android:layout_weight="1"
            android:textSize="24dp" />

        <LinearLayout
            android:id="@+id/btndivision"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_below="@+id/my_toolbar"
            android:background="@color/cardview_shadow_start_color"
            android:orientation="horizontal"></LinearLayout>

        <Button
            android:id="@+id/move_point"
            android:layout_width="340dp"
            android:layout_height="110dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/round_buttonright"
            android:drawableTop="@drawable/p64"
            android:drawablePadding="0dp"
            android:fontFamily="@font/cafe_dangdang"
            android:text="포인트충전"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textSize="24sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/orderlist_division"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@+id/my_toolbar"
        android:orientation="horizontal"></LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    </LinearLayout>

    <LinearLayout
        android:id="@+id/favorite_division"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/my_toolbar"
        android:orientation="horizontal"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/move_notice"
            android:layout_width="340dp"
            android:layout_height="110dp"
            android:layout_marginLeft="20dp"
            android:drawableTop="@drawable/info64"
            android:drawablePadding="0dp"
            android:fontFamily="@font/cafe_dangdang"
            android:background="@drawable/round_buttonleft"
            android:text="공지사항"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textSize="24sp" />

        <LinearLayout
            android:id="@+id/btndivision2"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_below="@+id/my_toolbar"
            android:background="@color/cardview_shadow_start_color"
            android:orientation="horizontal"></LinearLayout>

        <Button
            android:id="@+id/move_setting"
            android:layout_width="340dp"
            android:layout_height="110dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/round_buttonright"
            android:drawableTop="@drawable/setting64"
            android:drawablePadding="0dp"
            android:fontFamily="@font/cafe_dangdang"
            android:text="정보수정"
            android:textAlignment="center"
            android:layout_weight="1"
            android:textSize="24sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/notice_division"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_below="@+id/my_toolbar"
        android:orientation="horizontal"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    </LinearLayout>

    <LinearLayout
        android:id="@+id/setting_division"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@+id/my_toolbar"
        android:background="@color/cardview_shadow_start_color"
        android:orientation="horizontal"></LinearLayout>

</LinearLayout>