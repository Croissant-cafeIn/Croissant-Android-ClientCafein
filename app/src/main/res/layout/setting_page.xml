<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/select_title"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#FFFFFF"
            android:fontFamily="@font/cafe_dangdang"
            android:gravity="center"
            android:text="비밀번호 변경 페이지"
            android:textSize="20sp"
            android:textStyle="italic" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/mypage_division"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/my_toolbar"
        android:background="@color/cardview_shadow_start_color"
        android:orientation="horizontal"></LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="10dp"
            android:fontFamily="@font/cafe24"
            android:textSize="20sp"
            android:layout_gravity="left"
            android:text="현재 비밀번호를 입력해주세요" />

        <EditText
            android:id="@+id/currenPassword"
            android:layout_width="match_parent"
            android:layout_height="30sp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/round_edittext"
            android:fontFamily="@font/cafe_dangdang"
            android:textSize="20sp"
            android:hint="현재 비밀번호 입력" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="10dp"
            android:fontFamily="@font/cafe24"
            android:textSize="20sp"
            android:layout_gravity="left"
            android:text="새로운 비밀번호를 입력해주세요" />

        <EditText
            android:id="@+id/changePassword1"
            android:layout_width="match_parent"
            android:layout_height="30sp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/round_edittext"
            android:fontFamily="@font/cafe_dangdang"
            android:textSize="20sp"
            android:hint="새 비밀번호 입력" />

        <TextView
            android:id="@+id/passwordRule"
            android:text="*비밀번호는 최소한 4글자 이상이어야 합니다."
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/cafe24_decobox"
            android:visibility="gone"
            android:textColor="@android:color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="10dp"
            android:fontFamily="@font/cafe24"
            android:text="새 비밀번호 확인"
            android:layout_gravity="left"
            android:textSize="20sp"
            />


        <EditText
            android:id="@+id/chagePasswordCheck2"
            android:layout_width="match_parent"
            android:layout_height="30sp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/round_edittext"
            android:fontFamily="@font/cafe_dangdang"
            android:textSize="20sp"
            android:hint="새 비밀번호 확인"
            />

        <TextView
            android:id="@+id/passwordAgainRule"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="10dp"
            android:fontFamily="@font/cafe24_decobox"
            android:text="*입력하신 비밀번호와 맞지 않습니다."
            android:visibility="gone"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/changePasswordBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:background="@color/payButton"
            android:fontFamily="@font/cafe_dangdang"
            android:textSize="20sp"
            android:text="변경"
            android:textColor="@android:color/white" />

    </LinearLayout>



</LinearLayout>